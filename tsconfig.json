{
    "compilerOptions": {
      "noImplicitAny": true,
      "removeComments": true,
      "module": "nodenext",
      "target": "ES5",
      "moduleResolution": "nodenext",
      "types": ["node"],
      "lib": ["es2015", "es2021", "dom"],
      "sourceMap": true,
      "outDir": "lib",
      "skipLibCheck": true,
      "declaration": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "assets/**/*", "examples/**/*"],
    "exclude": ["**/*.spec.ts"]
  }